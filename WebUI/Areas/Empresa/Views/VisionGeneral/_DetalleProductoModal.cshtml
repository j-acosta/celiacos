@model WebUI.Entities.Producto

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">PRODUCTO EN DETALLE</h4>
        </div>
        <div class="modal-body">
            <img src="@Url.Content(@Model.Foto)" alt="..." style="height: 250px;">
            <h4>
                @Html.DisplayNameFor(model => model.Nombre)
            </h4>

            <p>
                @Html.DisplayFor(model => model.Nombre)
            </p>

            <h4>
                @Html.DisplayNameFor(model => model.Descripcion)
            </h4>

            <p>
                @Html.DisplayFor(model => model.Descripcion)
            </p>
            <h4>
                Certificacion SIN TACC
            </h4>
            <p>
                <a href="@Url.Content( @Html.DisplayFor(model => model.LogoSINTACC).ToString() )" target="_blank" style="text-decoration: underline;"> certificacionProdcuto.jpg</a>
            </p>
        </div>
        <div class="modal-footer">
            @Html.ActionLink("Editar", "EditarProducto", "Producto", new { id = Model.Id }, new { @class = "btn btn-primary", role = "button", @style = "box-shadow: 1px 1px 1px black;" });
        </div>
    </div>
</div>
